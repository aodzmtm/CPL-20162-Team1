<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Beacon 설정" >
        <EditTextPreference
            android:defaultValue="b9407f30-f5f8-466e-aff9-25556b57fe6d"
            android:key="keyUUID"
            android:maxLines="1"
            android:selectAllOnFocus="true"
